%div.container
	%h1 Articles
	%div.table-responsive
		%table.table.table-hover
			%thead
				%tr
					%th Title
					%th Text
					%th Actions

			- @articles.each do |article|
				%tr
					%td
						= article.title
					%td
						= article.text
					%td
						%div.btn-group
							= link_to 'Show', article_path(article), :class => 'btn btn-secondary'
							= link_to 'Edit', edit_article_path(article), :class => 'btn btn-secondary'
							= link_to 'Delete', article_path(article), method: :delete, :class => 'btn btn-secondary'

	%div
		= link_to 'New Article', new_article_path, :class => 'btn btn-primary btn-block'